<h1>AITEC Wetterstation</h1>
<%= link_to 'Neue Messung', new_measurement_path %>
<%= link_to 'Neues Interval', "/intervals", method: :post  %>
<%= line_chart [
		{ name: "Temperatur", 
		  data: Measurement.group_by_second(:created_at, range: @selected_interval.start..@selected_interval.end).maximum(:temperature) 
		},
		{ name: "Feuchtigkeit", 
		  data: Measurement.group_by_second(:created_at, range: @selected_interval.start..@selected_interval.end).maximum(:humidity) 
		},
		{ name: "Luftdruck", 
		  data: Measurement.group_by_second(:created_at, range: @selected_interval.start..@selected_interval.end).maximum(:pressure),
		},
	],
	library: {
		xAxis: {
			visible: false
		}
	},
	discrete: true
%>
<table class="table table-hover">
	<thead>
		<tr>
		 <th>Start</th>
		 <th>Ende</th>
		 <th>Aktiviert</th>
		 <th></th>
		</tr>
 	</thead>
 
 	<tbody>
  	<% @intervals.each do |interval| %>
    	<tr>
      	<td><%= interval.start.strftime("%d.%m.%y - %H:%M:%S") %></td>
      	<td><%= !interval.end || interval.end.strftime("%d.%m.%y - %H:%M:%S") %></td>
   		<td><%= interval.is_current %></td>	
      	<td><%= link_to 'Aktivieren', interval_path(interval),
              method: :put %>
         		| 
         	 <%= link_to 'Löschen', interval_path(interval),
              method: :delete,
              data: { confirm: 'Möchtest du das Interval wirklich löschen?' } %>     
         </td>
   	</tr>
  	<% end %>
  	</tbody>
</table>
<table class="table table-hover">
	<thead>
		<tr>
		 <th>Temperatur</th>
		 <th>Feuchtigkeit</th>
		 <th>Luftdruck</th>
		 <th>Datum</th>
		 <th></th>
		</tr>
 	</thead>
 
 	<tbody>
  	<% @measurements.each do |measurement| %>
    	<tr>
      	<td><%= measurement.temperature %></td>
      	<td><%= measurement.humidity %></td>
      	<td><%= measurement.pressure %></td>
      	<td><%= measurement.created_at.strftime("%d.%m.%y - %H:%M:%S") %></td>
      	<td><%= link_to 'Löschen', measurement_path(measurement),
              method: :delete,
              data: { confirm: 'Möchtest du die Messung wirklich löschen?' } %></td>
   	</tr>
  	<% end %>
  	</tbody>
</table>
